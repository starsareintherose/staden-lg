XNIPOBJS=\
	$(NIP)\
	$(XCOMMONOBJS)\
	plX.o\
	textOutput.o 

nip: $(NIPOBJS)
	$(LD) $(LDFLAGS) -o $@ $(NIPOBJS) $(LFLAGS)

xnip: $(XNIPOBJS)
	$(CLD) $(LDFLAGS) -o $@ $(XNIPOBJS) $(XLFLAGS)




