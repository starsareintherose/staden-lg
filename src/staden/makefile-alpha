	anals89.a\
	asubs89.a\
	$(SEQLIB)

NIPLOBJS=\
	$(NIPL)\
	$(SCOMMONOBJS)

nipl: $(NIPLOBJS)
	$(LD) $(LDFLAGS) -o $@ $(NIPLOBJS) $(LFLAGS)



NIPF=\
