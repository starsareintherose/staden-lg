	tagU2.o\
	tagU1.o

DAP=\
	dap.o\
	dbsysnew.o\
	dbsyscommon.o\
	asubs89.a\
	plot92.a

DAPOBJS=\
	$(DAP)\
	$(COMMONOBJS)\
	pl4010.o\
	conEdit.o\
	tagU2.o

XDAPOBJS=\
	$(DAP)\
	$(XDAPCOMMONOBJS)\
	plX.o\
	textOutput.o\
	$(EDITOR)\
	$(TMANOBJS)\
	$(TAGEDITOR)

dap: $(DAPOBJS)
	$(LD) $(LDFLAGS) -o $@ $(DAPOBJS) $(LFLAGS)

xdap: $(XDAPOBJS)
	$(CLD) $(LDFLAGS) -o $@ $(XDAPOBJS) $(XLFLAGS)

convert_project: cvt.o
	$(CC) $(CFLAGS) -o $@ cvt.o

