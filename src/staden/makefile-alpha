	asubs89.a\
	plot92.a

NIPFOBJS=\
	$(NIPF)\
	$(COMMONOBJS)\
	pl4010.o


nipf: $(NIPFOBJS)
	$(LD) $(LDFLAGS) -o $@ $(NIPFOBJS) $(LFLAGS)





PIP=\
	pip.o\
	analps89.a\
	patternp.a\
	patternpc.a\
	asubs89.a\
	plot92.a\
	$(SEQLIB)

PIPOBJS=\
	$(PIP)\
	$(COMMONOBJS)\
	pl4010.o

XPIPOBJS=\
	$(PIP)\
	$(XCOMMONOBJS)\
	plX.o\
	textOutput.o 

pip: $(PIPOBJS)
	$(LD) $(LDFLAGS) -o $@ $(PIPOBJS)  $(LFLAGS)

xpip:$(XPIPOBJS)
	$(CLD) $(LDFLAGS) -o $@ $(XPIPOBJS) $(XLFLAGS)




PIPL=\
	pipl.o\
	patternpc.a\
	analps89.a\
